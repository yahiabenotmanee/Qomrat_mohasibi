<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".create_count_client">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white">
    <TextView
        android:id="@+id/textView"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:text="CUSTOMER"
        android:textColor="@color/blue"
        android:textColorLink="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
       android:gravity="center|top"
        />
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="550dp"
        android:gravity="center"
        android:background="@drawable/btn_white"
        android:orientation="vertical"
        app:cardElevation="15dp"
        android:elevation="6dp"
       >

        <TextView
            android:id="@+id/namelable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textColor="#050505"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginRight="100dp"
            />

        <EditText
            android:id="@+id/full_name"
            android:layout_width="280dp"
            android:layout_height="46dp"
            android:background="@drawable/input_strock"
            android:ems="10"
            android:hint="Full name"
            android:textColor="@color/Black2"
            android:textSize="15dp"
            android:textColorHint="@color/Black_for_hint"
            android:inputType="text"
            android:paddingStart="15dp"
            android:layout_margin="10dp"
             />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Email/Number"
            android:textColor="#050505"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginRight="90dp" />
        <EditText
            android:id="@+id/number_text"
            android:layout_width="280dp"
            android:layout_height="46dp"
            android:background="@drawable/input_strock"
            android:ems="10"
            android:hint="Email/number"
            android:textColor="@color/Black2"
            android:textSize="15dp"
            android:textColorHint="@color/Black_for_hint"
            android:inputType="text"
            android:paddingStart="15dp"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/datebirthlable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Birth"
            android:textColor="#050505"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginRight="90dp"
             />

        <EditText
            android:id="@+id/datebirth"
            android:layout_width="280dp"
            android:layout_height="46dp"
            android:background="@drawable/input_strock"
            android:ems="10"
            android:hint="Address"
            android:textSize="15dp"
            android:textColor="@color/Black2"
            android:textColorHint="@color/Black_for_hint"
            android:inputType="text"
            android:paddingStart="15dp"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/passwordlable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="#050505"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginRight="100dp" />

        <EditText
            android:id="@+id/password_text"
            android:layout_width="280dp"
            android:layout_height="46dp"
            android:background="@drawable/input_strock"
            android:ems="10"
            android:textSize="15dp"
            android:hint="password"
            android:textColor="@color/Black2"
            android:textColorHint="@color/Black_for_hint"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:layout_margin="10dp" />




        <Button
            android:id="@+id/create_button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_button"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Create"
            android:textColorLink="@color/blue"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="60dp" />





    </LinearLayout>
</LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>